<div class="row sign-up-form">
  <div class="col s6 m6">
    <div class="card blue-grey darken-1">
      <div class="card-content white-text">
        <span class="card-title yellow-text"><%= @student.name %></span>
        <p>Email: <%= @student.email %></p>
      </div>
    </div>
  </div>
  <div class="col s6 m6">
    <div class="card blue-grey darken-1">
      <div class="card-content white-text">
        <p><span class="card-title yellow-text">Course Enrollments:</span>
          <% if @student.courses.empty? %>
            None
          <% else %>
            <ul>
              <% @student.courses.each do |course| %>
                <li><%= course.short_name %>: <%= course.name %></li>
              <% end %>
            </ul>
          <% end %>
        </p>
      </div>
    </div>
  </div>
  <% if current_user == @student %>
    <%= link_to '<i class="material-icons right">create</i>Edit your profile'.html_safe, edit_student_path(@student), class: "waves-effect waves-light btn" %>
  <% end %>
</div>